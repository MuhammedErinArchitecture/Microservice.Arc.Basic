# docker build --no-cache -t user-api -f .\UserService.Api\Dockerfile .# Build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY . .
RUN dotnet restore "./ContentService.Api/ContentService.Api.csproj"
RUN dotnet publish "./ContentService.Api/ContentService.Api.csproj" -c Release -o /app

# Run
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /app .
ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080
ENTRYPOINT ["dotnet", "ContentService.Api.dll"]